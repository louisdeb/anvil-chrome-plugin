{
  "manifest_version": 2,

  "name": "Anvil Extension",
  "description": "This extension uses your iOS device as a game controller.",
  "version": "1.0",

  "browser_action": {
   "default_icon": "assets/icon.png",
   "default_popup": "popup.html"
  },

  "background": {
       "scripts": ["scripts/jquery.js", "scripts/frontend.js", "scripts/popup.js"]
  },

  "permissions": [
   "activeTab"
  ]
}
